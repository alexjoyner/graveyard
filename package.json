{
  "name": "cet-db",
  "version": "0.0.1",
  "scripts": {
    "start": "concurrently --kill-others 'npm run server:dev:watch' 'npm run webpack:dev'",
    "electron": "electron ./docs/main.js",
    "electron:build": "npm run build && electron ./docs/main.js",
    "package": "babel server --out-dir docs && electron-packager ./docs CET-DB --all --out ~/Desktop/CET-DB --electron-version 1.6.10 --overwrite",
    "package:mac": "electron-packager ./docs CET-DB --platform='darwin' --out ~/Desktop/CET-DB --electron-version 1.6.10 --overwrite --icon ./docs/icons/mac/icon.png.icns",
    "build": "npm run build:webpack && npm run build:server",
    "build:webpack": "webpack -p --define process.env.NODE_ENV='\"production\"'",
    "build:server": "babel server --out-dir serverDist",
    "production": "pm2 start process.yml --env env_production && pm2 logs",
    "server:dev": "babel-node ./server/server.js",
    "server:dev:watch": "nodemon ./server/server.js --exec babel-node",
    "webpack:dev": "webpack-dev-server -d --progress --profile --colors --watch --display-error-details --content-base ./docs --inline --hot",
    "test": "mocha $(find ./client ./server -path '*spec*') --compilers js:babel-core/register --require ignore-styles",
    "cover": "node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha -- -R spec $(find ./client ./server -path '*spec*')  --compilers js:babel-core/register --require ignore-styles",
    "test:watch": "PORT=2080 npm run test -- --watch ",
    "cover:with_open": "npm run cover && open ./coverage/lcov-report/index.html"
  },
  "license": "MIT",
  "dependencies": {
    "async": "^2.4.1",
    "axios": "^0.16.1",
    "body-parser": "^1.15.2",
    "elasticsearch": "^13.0.1",
    "electron": "^1.6.10",
    "express": "^4.14.0",
    "lodash": "^3.10.1",
    "moment": "^2.14.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "react-router": "^2.0.1",
    "redux": "^3.6.0",
    "redux-form": "^6.0.5",
    "redux-promise": "^0.5.3",
    "ro-utils": "^1.0.0-alpha.16",
    "validator": "^7.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "coveralls": "^2.13.1",
    "electron-packager": "^8.7.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.3.0",
    "ro-dev-utils": "^1.0.0-Alpha.3"
  }
}
