{
  "name": "your-project-name",
  "version": "v0.0.1",
  "scripts": {
    "start": "concurrently --kill-others 'npm run server:dev:watch' 'npm run webpack:dev'",
    "build": "NODE_ENV='production' webpack -p",
    "production": "pm2 start process.yml --env env_production && pm2 logs",
    "server:dev": "babel-node ./server/server.js --presets es2015,stage-2",
    "server:dev:watch": "nodemon ./server/server.js --exec babel-node --presets es2015,stage-2",
    "webpack:dev": "webpack-dev-server -d --progress --profile --colors --watch --display-error-details --content-base ./docs --inline --hot",
    "test": "mocha $(find ./client ./server -path '*spec*') --full-trace --compilers js:babel-core/register --require ignore-styles",
    "cover": "PORT=2081 node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha -- -R spec $(find ./client ./server -path '*spec*')  --compilers js:babel-core/register ",
    "test:watch": "PORT=2080 npm run test -- --watch ",
    "cover:with_open": "npm run cover && open ./coverage/lcov-report/index.html"
  },
  "license": "MIT",
  "dependencies": {
    "ro-utils": "1.0.0-alpha.1",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "lodash": "^3.10.1",
    "moment": "^2.14.1",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.0",
    "react-router": "^2.0.1",
    "redux": "^3.0.4",
    "redux-form": "^6.0.5",
    "redux-promise": "^0.5.3",
    "axios": "^0.16.1"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.6.1",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.2.1",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.1.18",
    "babel-preset-stage-1": "^6.1.18",
    "babel-preset-stage-2": "^6.13.0",
    "bourbon": "^4.2.7",
    "coveralls": "^2.13.1",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^2.4.5",
    "redux-thunk": "^2.1.0",
    "rewire": "^2.5.2",
    "ro-dev-utils": "^1.0.0-Alpha.1",
    "sinon": "^1.17.5",
    "supertest": "^3.0.0"
  }
}
