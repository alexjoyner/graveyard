{
	"name": "oee-master",
	"version": "0.8.0",
	"description": "Root monrepo for oee-master",
	"main": "build/electron.js",
	"repository": "https://github.com/alexjoyner/oee-master.git",
	"author": "Alex Joyner <alex@voicir.com>",
	"license": "PRIVATE",
	"private": true,
	"homepage": "http://alexjoyner.github.io/",
	"scripts": {
		"start": "yarn link ro-component-library && react-scripts start",
		"start:local": "yarn link ro-component-library && REACT_APP_SERVER_ADDRESS=http://192.168.0.47 react-scripts start",
		"build": "react-scripts build",
		"e2e": "cypress open",
		"test": "yarn link ro-component-library && react-scripts test",
		"test:bail": "react-scripts test -b",
		"coverage": "react-scripts test --coverage",
		"eject": "react-scripts eject",
		"predeploy": "npm run build",
		"deploy": "gh-pages -d build",
		"deploy:localserver": "cd ./server && yarn deploy:local",
		"deploy:server": "cd ./server && yarn deploy",
		"deploy:client": "yarn deploy",
		"postversion": "git push --tags && echo \"Successfully released version $npm_package_version!\"",
		"storybook": "start-storybook -p 9009 -s public",
		"build-storybook": "build-storybook -s public",
		"electron-start": "electron .",
		"electron-dist": "electron-builder"
	},
	"dependencies": {
		"@babel/core": "^7.4.3",
		"@types/cypress": "^1.1.3",
		"@types/enzyme": "^3.9.1",
		"@types/enzyme-adapter-react-16": "^1.0.5",
		"@types/jest": "^24.0.11",
		"@types/lodash": "^4.14.123",
		"@types/moment-timezone": "^0.5.12",
		"@types/node": "^11.13.4",
		"@types/react": "^16.8.13",
		"@types/react-dom": "^16.8.4",
		"@types/react-redux": "^7.0.6",
		"@types/redux-thunk": "^2.1.0",
		"@types/socket.io-client": "^1.4.32",
		"@types/storybook__addon-actions": "^3.4.2",
		"@types/storybook__addon-links": "^3.3.4",
		"@types/storybook__react": "^4.0.1",
		"axios": "^0.18.0",
		"baseui": "^6.13.0",
		"digest-auth-request": "^0.7.0",
		"highcharts": "^7.1.1",
		"highcharts-react-official": "^2.1.3",
		"lodash": "^4.17.11",
		"moment": "^2.24.0",
		"moment-timezone": "^0.5.23",
		"prop-types": "^15.7.2",
		"react": "^16.9.0-alpha.0",
		"react-dom": "^16.9.0-alpha.0",
		"react-icons": "3.5.0",
		"react-scripts": "2.1.8",
		"request": "^2.86.0",
		"ro-component-library": "1.10.0",
		"socket.io-client": "^2.2.0",
		"styletron-engine-atomic": "^1.1.0",
		"styletron-react": "^4.4.6",
		"styletron-react-core": "^1.3.3",
		"styletron-standard": "^2.0.2",
		"typescript": "^3.4.3"
	},
	"devDependencies": {
		"@storybook/addon-actions": "^5.0.8",
		"@storybook/addon-links": "^5.0.8",
		"@storybook/addons": "^5.0.8",
		"@storybook/react": "^5.0.8",
		"babel-core": "^7.0.0-bridge",
		"cypress": "^3.2.0",
		"electron": "^4.1.4",
		"electron-builder": "^20.39.0",
		"electron-is-dev": "^1.1.0",
		"enzyme": "^3.9.0",
		"enzyme-adapter-react-16": "^1.12.1",
		"enzyme-to-json": "^3.3.5",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-plugin-cypress": "^2.2.1",
		"eslint-plugin-import": "^2.12.0",
		"eslint-plugin-jest": "^22.4.1",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-react": "^7.9.1",
		"flow-bin": "^0.97.0",
		"gh-pages": "^2.0.1",
		"jest-localstorage-mock": "^2.4.0",
		"react-testing-library": "^6.1.2"
	},
	"keywords": [
		"Electron",
		"oee-master",
		"Web",
		"Desktop",
		"Datalogger",
		"Microservices"
	],
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,jsx}",
			"!src/index.js",
			"!src/**/*.stories.js",
			"!src/**/stories.js",
			"!src/reducers.js",
			"!src/registerServiceWorker.js"
		]
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"build": {
		"appId": "com.example.oee-master",
		"files": [
			"build/**/*",
			"node_modules/**/*"
		],
		"directories": {
			"buildResources": "assets",
			"output": "desktop"
		}
	}
}